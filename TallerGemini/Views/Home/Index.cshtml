<form method="post" style="margin-bottom: 30px;">
    <div class="mb-3">
        <label for="modelo" class="form-label fw-bold">Selecciona el modelo:</label>
        <select class="form-select rounded-pill shadow-sm" name="modelo" id="modelo" required style="max-width: 300px;">
            <option value="">-- Elige un modelo --</option>
            <option value="Gemini">Gemini</option>
            <option value="Groq">Groq</option>
        </select>
    </div>

    <br />

    <div>
        <label for="mensaje">Tu mensaje:</label><br />
        <input type="text" id="mensaje" name="mensaje" style="width: 400px;" required />
    </div>

    <br />

    <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow-sm" style="background-color: #007acc; border: none;">
        🚀 Enviar
    </button>
</form>

@if (!string.IsNullOrEmpty(respuesta))
{
    <div style="margin-top: 20px; padding: 15px; background-color: #f5f5f5; border-left: 5px solid #007acc;">
        <strong>Respuesta del bot:</strong><br />
        <p>@respuesta</p>
    </div>
}
